# API Keys
# Get your OpenRouter API key from: https://openrouter.ai
OPENROUTER_API_KEY="sk-or-v1-your-openrouter-api-key-here"

# Optional: Get your Brave Search API key from: https://api.search.brave.com
BRAVE_API_KEY="BSA-your-brave-api-key-here"

# Vector Database (Optional - app works without Qdrant)
# Local Qdrant instance
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Cloud Qdrant (if using Qdrant Cloud, uncomment and fill in)
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-qdrant-api-key

# Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_chatbot

# Server Settings
PORT=8000
HOST=0.0.0.0
DEBUG=True

# Security (Optional)
# SECRET_KEY=your-secret-key-here
